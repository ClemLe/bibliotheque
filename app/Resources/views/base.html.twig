                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      </button>
                      <a class="navbar-brand" href="{{ path('bibli_homepage') }}"><span class="glyphicon glyphicon-home"></span>   Bibliotheque</a>
                   </div> 
                   <div class="collapse navbar-collapse">
                      <ul class="nav navbar-nav">
                         <li><a href="{{ path('bibli_contact_home') }}"> <span class="glyphicon glyphicon-envelope"></span>  Nous contacter</a></li>

                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li><a href="{{ path('bibli_rechercher_livre') }}"> <span class="glyphicon glyphicon-search"></span>  Rechercher un livre</a></li>
                            <li><a href="#"> <span class="glyphicon glyphicon-list"></span>  Mes reservations</a></li>

                            {% if is_granted("ROLE_EMPLOYE") %}  
                            <li><a href="{{ path('bibli_ajouter_livre') }}"> <span class="glyphicon glyphicon-plus"></span>  Ajouter un livre</a></li>
                            <li><a href="{{ path('bibli_consulter_liste_messages') }}"> 
                                    <div id="messageNonLus"><span class="glyphicon glyphicon-envelope"></span> Messages </div>
                                </a>
                           </li>

                                    </span></a></li>

                            <script type="text/javascript">
                                 $.ajax({
                                    type: "GET",
                                    url: "{{ path('bibli_calcul_nombre_message') }}",		
                                    success: function(nomnbreMessageNonLus){          
                                            if(nomnbreMessageNonLus >0){
                                                document.getElementById("messageNonLus").innerHTML +=  "<span class='label label-primary' >"+nomnbreMessageNonLus;
                                            }
                                    },
                                    error: function(){
                                        alert("Erreur de recuperation des messages non lus");
                                    }
                                });  
                            </script>                        

                            {% endif %}
                        {% endif %}
                      </ul>
                      <ul class="nav navbar-nav navbar-right">
                          {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-user"></span> {{  app.user.username  }} <span class="caret"></span></a>
                                <ul class="dropdown-menu">       
                                    <li><a href="{{path('fos_user_change_password')}}" > <span class="glyphicon glyphicon-cog"></span> Modifier son mot de passe </a></li>
                                    <li><a href="" > <span class="glyphicon glyphicon-cog"></span> Modifier son adresse mail</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}" > <span class="glyphicon glyphicon-off"></span> Déconnexion </a></li>              
                                </ul>
                            </li>
                           {% else %}
                          <li> <a href="{{ path('fos_user_security_login') }}" > <span class="glyphicon glyphicon-log-in"></span> Se connecter </a></li>
                          <li> <a href="{{ path('fos_user_registration_register') }}" > <span class="glyphicon glyphicon-edit"></span> Créer un compte </a></li>
                          {% endif %}
                      </ul>
                   </div>
                   <!--/.nav-collapse -->
                </div>
             </div>
          </div>
